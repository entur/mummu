<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<TargetEndpoint name="stop-places-v1-read">
    <DefaultFaultRule name="target-fault">
        <Step>
            <Name>add-cors</Name>
        </Step>
    </DefaultFaultRule>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>flowCallout.replaceTargetUrl</Name>
            </Step>
        </Request>
        <Response>
            <Step>
                <Name>add-cors</Name>
            </Step>
        </Response>
    </PreFlow>
    <Flows/>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <HTTPTargetConnection>
        <URL>https://stop-places-v1-read.INGRESS_ENVIRONMENT</URL>
        <Properties>
            <Property name="response.streaming.enabled">true</Property>
        </Properties>
    </HTTPTargetConnection>
</TargetEndpoint>
